<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MediaPlayerController">
   <center>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
         <content>
            <MediaView fx:id="mediaView" BorderPane.alignment="BOTTOM_CENTER" />
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <VBox prefHeight="120.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Slider for video seek control -->
            <Slider fx:id="slider" maxWidth="800.0" />
            
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <!-- Loading indicator -->
                  <ProgressIndicator fx:id="loadingIndicator" visible="false" />

                  <Button mnemonicParsing="false" onAction="#selectMedia" text="Select Media" />
                  <Button fx:id="btnPlay" mnemonicParsing="false" onMouseClicked="#btnPlay" text="Play" />
                  <Button fx:id="btnStop" mnemonicParsing="false" onMouseClicked="#btnStop" text="Stop" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>